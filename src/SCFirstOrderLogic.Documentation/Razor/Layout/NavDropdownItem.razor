@inject NavigationManager NavigationManager

<DropdownItem Clicked="Navigate"><img src="@IconUri" /> @Text</DropdownItem>

@code {
    [Parameter]
    public required string TargetUri { get; set; }

    [Parameter]
    public required string IconUri { get; set; }

    [Parameter]
    public required string Text { get; set; }

    public void Navigate() => NavigationManager.NavigateTo(TargetUri);
}
